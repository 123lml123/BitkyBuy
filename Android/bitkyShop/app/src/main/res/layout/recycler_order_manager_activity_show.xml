<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/cardview_style_white"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
      <LinearLayout
          android:id="@+id/recycler_orderManagerActivity_LinearLayout1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/recycler_orderManagerActivity_anon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号: "
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/recycler_orderManagerActivity_orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/recycler_orderManagerActivity_anon1"
            android:text="订单ID"
            android:textSize="12sp"
            />

      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/recycler_orderManagerActivity_LinearLayout1"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/recycler_orderManagerActivity_anon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建时间: "
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/recycler_orderManagerActivity_orderCreatedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/recycler_orderManagerActivity_anon3"
            android:text="时间"
            android:textSize="12sp"
            />

      </LinearLayout>
      <TextView
          android:id="@+id/recycler_orderManagerActivity_orderStatus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:text="订单状态"
          android:textSize="16sp"
          />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
      <!--<com.lzy.ninegrid.NineGridView-->
          <!--android:id="@+id/recycler_orderManagerActivity_nineGridView"-->
          <!--android:layout_width="250dp"-->
          <!--android:layout_height="80dp"-->
          <!--/>-->
      <ImageView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          />
      <View
          android:layout_width="1dp"
          android:layout_height="30dp"
          android:layout_gravity="center_vertical"
          android:background="@color/lightgray"
          />
      <TextView
          android:id="@+id/recycler_orderManagerActivity_orderItemCount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_margin="7dp"
          android:text="共1件"
          android:textColor="@color/black"
          />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="3dp"

        >
      <TextView
          android:id="@+id/recycler_orderManagerActivity_anon2"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginLeft="20dp"
          android:gravity="center_vertical"
          android:text="金额: "
          android:textColor="@color/black"
          />

      <TextView
          android:id="@+id/recycler_orderManagerActivity_orderPrice"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_toRightOf="@id/recycler_orderManagerActivity_anon2"
          android:gravity="center_vertical"
          android:text="10元"
          android:textColor="@color/black"
          />

      <Button
          android:id="@+id/recycler_orderManagerActivity_confirmCompleted"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:background="@drawable/bg_btn_style_red"
          android:text="确认收货"
          android:textColor="@color/white"
          />

      <View
          android:id="@+id/recycler_orderManagerActivity_placeholder1"
          android:layout_width="10dp"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/recycler_orderManagerActivity_confirmCompleted"
          />
      <Button
          android:id="@+id/recycler_orderManagerActivity_cancelOrder"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/recycler_orderManagerActivity_placeholder1"
          android:background="@drawable/button_style_white"
          android:text="取消订单"
          android:textColor="@color/red"

          />
    </RelativeLayout>
  </LinearLayout>

</android.support.v7.widget.CardView>