<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cc.bitky.bitkyshop.fragment.homefragment.HomeFragment"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorAccent"
      android:orientation="vertical"
      >

    <!--<com.facebook.drawee.view.SimpleDraweeView-->
    <!--android:id="@+id/userFragment_simpleDraweeView"-->
    <!--android:layout_width="120dp"-->
    <!--android:layout_height="120dp"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--fresco:backgroundImage="@color/aliceblue"-->
    <!--fresco:roundAsCircle="true"-->
    <!--/>-->

    <TextView
        android:id="@+id/userFragment_userName_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="点击登录"
        android:textColor="@color/white"
        android:textSize="22sp"
        />
    <TextView
        android:id="@+id/userFragment_userName_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="点击退出登录"
        android:textColor="@color/white"
        android:visibility="gone"
        />
  </LinearLayout>
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:layout_margin="10dp"
      >
    <LinearLayout
        android:background="@drawable/selector_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:src="@mipmap/icon_user_order"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="我的订单"
          android:textSize="20sp"
          />
    </LinearLayout>
  </android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
      android:id="@+id/userFragment_addressCardView"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:layout_margin="10dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_list_item"
        android:orientation="horizontal"
        >
      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:src="@mipmap/icon_user_address"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="我的地址"
          android:textSize="20sp"
          />
    </LinearLayout>
  </android.support.v7.widget.CardView>

  <Button
      android:id="@+id/userfragment_button_logout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:background="@color/red"
      android:padding="15dp"
      android:text="退出登录"
      android:textColor="@color/white"
      android:textSize="22sp"
      android:visibility="gone"
      />
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:background="@color/powderblue"
      android:hint="点此设置"
      android:text=""
      />
</LinearLayout>
