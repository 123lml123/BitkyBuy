<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recycler_orderActivity_draweeview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/recycler_orderActivity_text_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp"
          android:layout_weight="2"
          android:minLines="2"
          android:text="简介"
          android:textSize="14sp"
          style="@style/ware_title"
          />


      <!--<View-->
      <!--android:layout_gravity="end"-->
      <!--android:layout_marginTop="0dp"-->
      <!--style="@style/line_vertical"-->
      <!--/>-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >


        <TextView
            android:id="@+id/recycler_orderActivity_text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="0.00 元"
            android:textSize="18sp"
            style="@style/ware_price"
            />
        <TextView
            android:id="@+id/recycler_orderActivity_text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="X 1"
            android:textSize="18sp"
            style="@style/ware_price"
            />
      </RelativeLayout>


    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>