<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <cc.bitky.bitkyshop.utils.KyToolBar
      android:id="@+id/signupActivity_toolbar"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="@color/colorAccent"
      app:enableKyNavigationIcon="true"
      app:title="注册"
      app:titleTextColor="@color/white"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="20dp"
      >

    <EditText
        android:id="@+id/signupActivity_editText_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_style_grey"
        android:hint="用户名 (使用中文、英文或数字)"
        android:maxLength="18"
        android:padding="10dp"
        android:inputType="text"
        android:textColorHint="@color/darkgrey"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/signupActivity_editText_inputPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_style_grey"
        android:hint="密码 (使用英文或数字)"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="18"
        android:padding="10dp"
        android:textColorHint="@color/darkgrey"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/signupActivity_editText_confirmPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_style_grey"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="18"
        android:padding="10dp"
        android:textColorHint="@color/darkgrey"
        android:textSize="16sp"
        />

    <EditText
        android:inputType="text"
        android:id="@+id/signupActivity_editText_pwdResumeQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_style_grey"
        android:hint="密码找回提示问题"
        android:maxLength="18"
        android:padding="10dp"
        android:textColorHint="@color/darkgrey"
        android:textSize="16sp"
        />
    <EditText
        android:inputType="text"
        android:id="@+id/signupActivity_editText_pwdResumeAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_style_grey"
        android:hint="密码找回问题答案"
        android:maxLength="18"
        android:padding="10dp"
        android:textColorHint="@color/darkgrey"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/signupActivity_btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_style_red"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
  </LinearLayout>
</LinearLayout>